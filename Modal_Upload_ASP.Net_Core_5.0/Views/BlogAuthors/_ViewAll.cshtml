@model IEnumerable<Modal_Upload_ASP.Net_Core_5._0.Models.BlogAuthor>

    <div class="col-md-12 ">

        <h1 class="text-center"><i class="fas fa-comments-dollar text-success"></i> Blog Authors</h1>


        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Imagepath)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BlogAuthorName)
                    </th>
                   
                    <th>
                        <a onclick="showInPopup('@Url.Action("Create_Update","BlogAuthors",null,Context.Request.Scheme)','New Blog Author')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Blog Author</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img style="height:150px;" src="@Html.DisplayFor(modelItem => item.Imagepath)" />
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.BlogAuthorName)
                        </td>
                       
                        <td>
                            <div>
                                <a onclick="showInPopup('@Url.Action("Create_Update","BlogAuthors",new {id=item.BlogAuthorId},Context.Request.Scheme)','Update BlogAuthor')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                                <form asp-action="Delete" asp-route-id="@item.BlogAuthorId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <input type="hidden" asp-for="@item.BlogAuthorId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>